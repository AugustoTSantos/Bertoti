package PlataformaComunicacao;

public class Pessoas {
        String nome;
        String email;
        String id;
        String funcao;

        Pessoas(String nome, String email, String id, String funcao) {
            this.nome = nome;
            this.email = email;
            this.id = id;
            this.funcao = funcao;
        }

        String getNome() {
            return nome;
        }
        void setNome(String novoNome) {
            this.nome = novoNome;
        }

        String getEmail() {
            return email;
        }
        void setEmail(String novoEmail) {
            this.email = novoEmail;
        }

        String getId() {
            return id;
        }
        void setId(String novoId) {
            this.id = novoId;
        }

        String getFuncao() {
            return funcao;
        }
        void setFuncao(String novaFuncao) {
            this.funcao = novaFuncao;
        }
    }
